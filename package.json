{
  "name": "chill-rest-api",
  "version": "1.0.0-alpha.1",
  "description": "REST API for the chill monitoring service.",
  "scripts": {
    "precommit": "lint-staged",
    "lint": "eslint src test; exit 0",
    "lint:fix": "eslint src test --fix; exit 0",
    "start": "nodemon --watch src/ --exec babel-node src/ --source-maps",
    "clean": "rimraf dist/",
    "babel": "babel src/ -d dist/",
    "build": "run-s lint clean babel",
    "make:migration": "knex migrate:make",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "synchronize": "babel-node ./src/scripts/synchronize"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "chill",
    "rest-api"
  ],
  "authors": [],
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^1.0.2",
    "body-parser": "^1.15.2",
    "bookshelf": "^0.10.4",
    "bookshelf-camelcase": "^2.0.1",
    "boom": "^5.2.0",
    "camelize": "^1.0.0",
    "compression": "^1.7.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "express-session": "^1.15.5",
    "google-auth-library": "^0.10.0",
    "helmet": "^3.8.1",
    "http-status-codes": "^1.2.0",
    "joi": "^10.6.0",
    "jsonwebtoken": "^7.4.3",
    "knex": "^0.13.0",
    "lodash": "^4.17.4",
    "memory-cache": "^0.2.0",
    "migrate": "^0.2.3",
    "morgan": "^1.8.2",
    "npm-run-all": "^4.0.2",
    "passport": "^0.4.0",
    "passport-google-oauth": "^1.0.0",
    "pg": "^7.1.2",
    "serve-favicon": "^2.4.3",
    "sqlite3": "^3.1.8",
    "swagger-jsdoc": "^1.9.7",
    "webpack-merge": "^4.1.0",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.4.6",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-dynamic-import-node": "^1.0.2",
    "babel-preset-env": "^1.3.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-register": "^6.24.1",
    "eslint": "^3.19.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.4",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1",
    "semver": "^5.3.0"
  },
  "engines": {
    "node": ">= 6.9.0",
    "npm": ">= 3.10.8"
  }
}
